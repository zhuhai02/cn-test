<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- 通用日志格式 -->
  <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>

  <!-- 控制台输出 -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- 主日志文件（所有日志） -->
  <appender name="MAIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/application.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>30</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- FUNCTION_TEST 标记的日志文件 -->
  <appender name="FUNCTION_TEST_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/function_test.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/function_test.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <!-- 关键：使用 MarkerFilter 过滤特定标记 -->
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
        <marker>FUNCTION_TEST</marker>
      </evaluator>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <!-- PERF_PRODUCER_TEST 标记的日志文件 -->
  <appender name="PERF_PRODUCER_TEST_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/perf_producer_test.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/perf_producer_test.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <!-- 关键：使用 MarkerFilter 过滤特定标记 -->
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
        <marker>PERF_PRODUCER_TEST</marker>
      </evaluator>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <!-- PERF_CONSUMER_TEST 标记的日志文件 -->
  <appender name="PERF_CONSUMER_TEST_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/perf_consumer_test.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/perf_consumer_test.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <!-- 关键：使用 MarkerFilter 过滤特定标记 -->
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
        <marker>PERF_CONSUMER_TEST</marker>
      </evaluator>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <!-- Root Logger：输出到控制台和主文件 -->
  <root level="info">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="MAIN_FILE"/>
  </root>

  <!-- 单独配置一个 Logger 处理 FUNCTION_TEST 标记 -->
  <logger name="FUNCTION_TEST_LOGGER" level="info" additivity="false">
    <appender-ref ref="FUNCTION_TEST_FILE"/>
  </logger>

  <!-- 单独配置一个 Logger 处理 PERF_PRODUCER_TEST 标记 -->
  <logger name="PERF_PRODUCER_TEST_LOGGER" level="info" additivity="false">
    <appender-ref ref="PERF_PRODUCER_TEST_FILE"/>
  </logger>

  <!-- 单独配置一个 Logger 处理 PERF_CONSUMER_TEST 标记 -->
  <logger name="PERF_CONSUMER_TEST_LOGGER" level="info" additivity="false">
    <appender-ref ref="PERF_CONSUMER_TEST_FILE"/>
  </logger>


</configuration>